extends layout

block content

  h1 #{title}

  form(method='POST' action='')
    div
      label(for='name') Brand:
      input(type='text', placeholder='Nike, Reebok ect.' name='name' value=(undefined===brand ? '': brand.name))

    div 
      label(for="description") Brand Description: 
      textarea(cols="60", rows="5" name="description" placeholder='Enter Brand summary here...' value=(undefined===brand ? '': brand.description)) 

    div
      button(type="submit") Submit

  if errors
   ul
    for error in errors
     li!= error.msg