extends layout

block content

  h1 #{title}

  form(action="", method="POST")
    div
      label(for='name') Sneaker Name: 
      input(type='text' name='name', required='true' value=(undefined===sneaker ? '' : sneaker.name))
    div 
      label(for='description') Sneaker Description: 
      textarea(name="description", cols="50", rows="6" value=(undefined===sneaker ? '' : sneaker.description)) 

    div 
      label(for='brand') Brand: 
      select(name="brand" placeholder='Select brand' required='true')
        for brand in brands
          option(value=brand._id) #{brand.name}

    div 
      label(for="colorway") Colorway: 
      input(type="text", name="colorway" required='true', placeholder='Black/White etc.', value=(undefined===sneaker ? '' : sneaker.colorway))

    div 
      label(for="price") Price:
      input(type='number' step='any' name='price' required='true' placeholder=12.99 value=(undefined===sneaker ? '' : sneaker.price))

    div
      label(for="pairs") Pairs Owned: 
      input(type='number' name='pairs' placeholder=1  min=1 required='true' value=(undefined===sneaker ? '' : sneaker.pairs))

    div
      button(type="submit") Submit

  if errors 
    ul
      for error in errors
        li!= error.msg